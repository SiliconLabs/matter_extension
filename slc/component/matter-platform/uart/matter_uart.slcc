id: matter_uart
label: Matter UART
description: Enables sources and defines for UART as used by Matter components
package: "Matter"
category: Platform|UART
quality: production
metadata:
  sbom:
    license: Zlib

requires:
   - name: uartdrv_eusart
     condition:
     - matter_platform_mg

provides:
  - name: matter_uart
  # workaround: ot_platform_abstraction_core.slcc pulls their uartdrv_uart.c implementation if uartdrv_instance is present unless matter_thread_cli
  - name: matter_thread_cli
    condition: [matter_thread]

source:
  - path: third_party/matter_sdk/examples/platform/silabs/uart.cpp
  
include:
- path: third_party/matter_sdk/examples/platform/silabs
  file_list:
  - path: uart.h
  
define:
  - name: CONFIG_ENABLE_EUART
    condition:
    - matter_platform_mg
  - name: EFR32MG24
    condition:
    - device_family_efr32mg24
    - matter_platform_mg
  - name: MGM24
    condition:
    - device_family_mgm24
    - matter_platform_mg
  - name: SLI_SI91X_MCU_INTR_BASED_RX_ON_UART
    value: 1
    condition: [matter_platform_siwx917]
