
id: rs911x_ncp
package: Matter
label: RS911x NCP
description: >
  Adds support RS911x NCP device
category: Matter-WiFi|Platform
quality: production
metadata:
  sbom:
    license: Zlib

provides:
- name: rs911x_ncp
- name: efx_ncp_custom_host_mcu

requires:
- name: wiseconnect_sapi
- name: spidrv_core
- name: freertos
- name: psa_its
- name: matter_lwip_support

include:
- path: third_party/matter_sdk/src/platform/silabs/wifi
  file_list:
  - path: WifiInterfaceAbstraction.h
  - path: wfx_msgs.h
- path: third_party/matter_sdk/src/platform/silabs/wifi/wiseconnect-abstraction
  file_list:
  - path: WiseconnectInterfaceAbstraction.h
- path: third_party/matter_sdk/src/platform/silabs/wifi/rs911x
  file_list:
  - path: rsi_wlan_config.h
- path: third_party/matter_sdk/src/platform/silabs/wifi/rs911x/platform
  file_list:
  - path: rsi_board_configuration.h
  - path: sl_board_configuration.h
  - path: sl_si91x_ncp_utility.h
  - path: sl_board_configuration_SiWx917.h
  - path: rsi_hal.h
- path: third_party/matter_sdk/src/platform/silabs/rs911x
  file_list:
  - path: ble_config.h
  - path: rsi_ble_config.h
  - path: wfx_sl_ble_init.h
# TODO: spi_multiplex.h needs to be moved into a common directory
- path: third_party/matter_sdk/src/platform/silabs/wifi/wf200/platform
  file_list:
  - path: spi_multiplex.h

source:
- path: third_party/matter_sdk/src/platform/silabs/wifi/rs911x/platform/efx_spi.c
- path: third_party/matter_sdk/src/platform/silabs/wifi/rs911x/platform/rsi_hal_mcu_interrupt.c
- path: third_party/matter_sdk/src/platform/silabs/wifi/rs911x/platform/rsi_hal_mcu_ioports.c
- path: third_party/matter_sdk/src/platform/silabs/wifi/rs911x/platform/rsi_hal_mcu_timer.c
- path: third_party/matter_sdk/src/platform/silabs/wifi/rs911x/WifiInterface.cpp
- path: third_party/matter_sdk/src/platform/silabs/wifi/WifiInterfaceAbstraction.cpp
- path: third_party/matter_sdk/src/platform/silabs/wifi/wiseconnect-abstraction/WiseconnectInterfaceAbstraction.cpp
- path: third_party/matter_sdk/src/platform/silabs/rs911x/BLEManagerImpl.cpp
- path: third_party/matter_sdk/src/platform/silabs/rs911x/wfx_sl_ble_init.cpp

define:
- name: RSI_BLE_MAX_NBR_PERIPHERALS
  value: 1
- name: RSI_BLE_MAX_NBR_CENTRALS
  value: 1
- name: RSI_BLE_ENABLE
  value: 1
- name: SLI_SI91X_ENABLE_BLE
  value: 1