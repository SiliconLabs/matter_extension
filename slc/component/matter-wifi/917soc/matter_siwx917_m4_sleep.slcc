      - path: sl_si91x_m4_ps.h
source:
  - path: third_party/silabs/matter_support/matter/si91x/siwx917/BRD4338A/support/src/sl_si91x_m4_ps.c
define:
  - name: SI917_M4_SLEEP_ENABLED
