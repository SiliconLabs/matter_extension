quality: production
metadata:
  sbom:
    license: Zlib
provides:
  - name: matter_siwx917_m4_sleep
requires:
  - name: matter_icd_management
include:
  - path: third_party/silabs/matter_support/matter/si91x/siwx917/BRD4338A/support/inc
