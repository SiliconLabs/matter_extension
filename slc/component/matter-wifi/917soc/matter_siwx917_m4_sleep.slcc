  - name: SL_SI91X_MCU_WIRELESS_BASED_WAKEUP
    value: 1
template_contribution:
- name: event_handler
  condition:
  - sli_si91x_mcu_interface
  value:
    event: platform_init
    include: rsi_wisemcu_hardware_setup.h
    handler: sl_si91x_hardware_setup
  priority: -9995