id: wf200_ncp_extension
label: wf200_ncp_extension
package: Matter
description: >
  Adds support for the HAL and WiFi Driver layer for WF200 NCP devices
category: Matter-WiFi
provides:
- name: wf200_ncp_extension
requires:
- name: spidrv_core
- name: freertos
- name: psa_its

component:
- id: spidrv_core
  instance: [exp]

source:
- path: examples/platform/silabs/efr32/wf200/host_if.cpp
- path: examples/platform/silabs/efr32/wf200/efr_spi.c
- path: examples/platform/silabs/efr32/wf200/sl_wfx_crypto.c
- path: examples/platform/silabs/efr32/wf200/sl_wfx_securelink_task.c
- path: examples/platform/silabs/efr32/wf200/sl_wfx_task.c
- path: examples/platform/silabs/efr32/wf200/wf200_init.c
- path: examples/platform/silabs/efr32/spi_multiplex.c
- path: third_party/silabs/gecko_sdk/platform/radio/wifi/wfx_fmac_driver/bus/sl_wfx_bus.c
- path: third_party/silabs/gecko_sdk/platform/radio/wifi/wfx_fmac_driver/bus/sl_wfx_bus_spi.c
- path: third_party/silabs/gecko_sdk/platform/radio/wifi/wfx_fmac_driver/sl_wfx.c
- path: third_party/silabs/gecko_sdk/platform/radio/wifi/wfx_fmac_driver/secure_link/sl_wfx_secure_link.c
- path: src/platform/silabs/efr32/BLEManagerImpl.cpp

include:
- path: third_party/silabs/gecko_sdk/platform/radio/wifi/wfx_fmac_driver/bus
  file_list:
  - path: sl_wfx_bus.h
- path: third_party/silabs/gecko_sdk/platform/radio/wifi/wfx_fmac_driver
  file_list:
  - path: sl_wfx_host_api.h
  - path: sl_wfx_configuration_defaults.h
  - path: sl_wfx_constants.h      
  - path: sl_wfx.h
  - path: sl_wfx_version.h
- path: third_party/silabs/gecko_sdk/platform/radio/wifi/wfx_fmac_driver/pds/brd4321a
  condition: [brd4321a]
  file_list:
  - path: sl_wfx_pds.h
- path: third_party/silabs/gecko_sdk/platform/radio/wifi/wfx_fmac_driver/pds/brd8022a
  condition: [brd8022a]
  file_list:
  - path: sl_wfx_pds.h 
- path: third_party/silabs/gecko_sdk/platform/radio/wifi/wfx_fmac_driver/pds/brd8023a
  condition: [brd8023a]
  file_list:
  - path: sl_wfx_pds.h
- path: third_party/silabs/gecko_sdk/platform/radio/wifi/wfx_fmac_driver/pds/brd8022a
  unless: [brd8022a, brd8023a, brd4321a]
  file_list:
  - path: sl_wfx_pds.h  
- path: third_party/silabs/gecko_sdk/platform/radio/wifi/wfx_fmac_driver/secure_link
  file_list:
  - path: sl_wfx_secure_link.h 
- path: third_party/silabs/gecko_sdk/platform/radio/wifi/wfx_fmac_driver/firmware
  file_list:
  - path: sl_wfx_cmd_api.h
  - path: sl_wfx_general_api.h
  - path: sl_wfx_general_error_api.h
  - path: sl_wfx_api.h
  - path: sl_wfx_registers.h
  - path: sl_wfx_wf200_C0.h  
- path: third_party/silabs/gecko_sdk/platform/radio/wifi/wfx_fmac_driver/config
  file_list:
  - path: sl_wfx_configuration.h
- path: examples/platform/silabs/efr32/wf200
  file_list:
  - path: sl_wfx_board.h
  - path: sl_wfx_host.h
  - path: sl_wfx_task.h
- path: examples/platform/silabs/efr32
  file_list:
  - path: spi_multiplex.h
- path: src/platform/silabs/efr32/wifi
  file_list:
  - path: ethernetif.h

define:
- name: SL_WFX_DEBUG_MASK
- name: SL_WFX_CONFIG_SCAN
  value: 1
- name: SL_WFX_USE_SPI
- name: WF200_WIFI
  value: 1
- name: SL_WFX_DEBUG_MASK
  value: 0x0003
