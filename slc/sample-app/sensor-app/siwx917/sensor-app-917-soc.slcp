    instance: [btn0,btn1]
    from: wiseconnect3_sdk
  - id: sl_si91x_led_917
    instance: [led0,led1]
    from: wiseconnect3_sdk
  - instance: [timer0]
    from: wiseconnect3_sdk
    id: ulp_timers_instance

config_file:
  - path: ../../../../silabs_examples/silabs-sensors/data_model/sensor-wifi-app.zap
    directory: common
    file_id: zap_config
  - path: ../../../../provision.mattpconf
    directory: provision
    file_id: provision_config

include:
  - path: ../../../../silabs_examples/silabs-sensors/include
    file_list:
      - path: AppConfig.h
      - path: AppEvent.h
      - path: AppTask.h
      - path: SensorsCallbacks.h
      - path: SensorsUI.h
        condition:
        - matter_lcd_917SOC
      - path: CHIPProjectConfig.h
    directory: include

source:
  - path: ../../../../silabs_examples/silabs-sensors/src/AppTask.cpp
    directory: src
  - path: ../../../../silabs_examples/silabs-sensors/src/SensorsCallbacks.cpp
    directory: src
  - path: ../../../../silabs_examples/silabs-sensors/src/SensorsUI.cpp
    directory: src
    condition:
    - matter_lcd_917SOC
  - path: ../../../../examples/platform/silabs/main.cpp
    directory: src
  - path: ../../../../silabs_examples/silabs-sensors/src/ZclCallbacks.cpp
    directory: src

define:
  - name: CCP_SI917_BRINGUP
  - name: KVS_MAX_ENTRIES
    value: "255"
  - name: CHIP_CRYPTO_PLATFORM
    value: "1"
  - name: _WANT_REENT_SMALL
    value: "1"
  - name: NVM3_DEFAULT_NVM_SIZE
    value: "40960"
  - name: NVM3_DEFAULT_MAX_OBJECT_SIZE
    value: "4092"
  - name: SI917_SOC
    value: 1

configuration:
  - {name: SL_ULPUART_DMA_CONFIG_ENABLE, value: '0'}
# Default ICD configurations
  - {name: SL_IDLE_MODE_DURATION_S, value: '600'}
  - {name: SL_ACTIVE_MODE_DURATION_MS, value: '0'}
  - {name: SL_ACTIVE_MODE_THRESHOLD, value: '0'}

  - {name: CHIP_CONFIG_SYNCHRONOUS_REPORTS_ENABLED, value: '1'}
  - {name: CHIP_CONFIG_SUBSCRIPTION_TIMEOUT_RESUMPTION, value: '0'}
  
toolchain_settings:
  - option: cxx_standard
    value: gnu++17
  - option: nano_c_libs
    value: enabled
template_contribution:
  - name: memory_flash_start
    value: 0x081C2000
  - name: memory_flash_size
    value: 0x200000
  - name: memory_ram_start
    value: 0x400
  - name: memory_ram_size
    value: 0x4E200
  - name: EXECUTION_FROM_RAM
    value: 1

readme:
  - path: ./README_WiFi.md
ui_hints:
  highlight:
    - path: README_WiFi.md
      focus: false

tag:
  - hardware:component:led:2+

post_build:
  path: ../../../postbuild/matter_wifi_soc.slpb