load(
    "//pw_build:pigweed.bzl",
    "pw_cc_library",
    "pw_cc_perf_test",
    "pw_cc_test",
)

package(default_visibility = ["//visibility:public"])

licenses(["notice"])

pw_cc_library(
    name = "pw_checksum",
    srcs = [
        "crc16_ccitt.cc",
        "crc32.cc",
    ],
    hdrs = [
        "public/pw_checksum/crc16_ccitt.h",
        "public/pw_checksum/crc32.h",
        "public/pw_checksum/internal/config.h",
    ],
    includes = ["public"],
    deps = [
        "//pw_bytes",
        "//pw_span",
    ],
)

pw_cc_test(
    name = "crc16_ccitt_test",
    srcs = [
        "crc16_ccitt_test.cc",
        "crc16_ccitt_test_c.c",
    ],
    deps = [
        ":pw_checksum",
        "//pw_bytes",
        "//pw_unit_test",
    ],
)

pw_cc_test(
    name = "crc32_test",
    srcs = [
        "crc32_test.cc",
        "crc32_test_c.c",
    ],
    deps = [
        ":pw_checksum",
        "//pw_bytes",
        "//pw_unit_test",
    ],
)

pw_cc_perf_test(
    name = "crc32_perf_test",
    srcs = ["crc32_perf_test.cc"],
    deps = [
        ":pw_checksum",
        "//pw_bytes",
    ],
)

pw_cc_perf_test(
    name = "crc16_perf_test",
    srcs = ["crc16_ccitt_perf_test.cc"],
    deps = [
        ":pw_checksum",
        "//pw_bytes",
    ],
)
