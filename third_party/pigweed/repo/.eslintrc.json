{
  "ignorePatterns": [
    "bazel-bin",
    "bazel-pigweed",
    "bazel-out",
    "bazel-testlogs",
    "node-modules",
    "*.js",
    "*.d.ts"
  ],
  "extends": [
    "./node_modules/gts/",
    "plugin:react/recommended"
  ],
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "node/no-unsupported-features/es-syntax": "off",
    "node/no-unpublished-import": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
