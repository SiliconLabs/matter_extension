load(
    "//pw_build:pigweed.bzl",
    "pw_cc_library",
    "pw_cc_test",
)

package(default_visibility = ["//visibility:public"])

licenses(["notice"])

pw_cc_library(
    name = "static_router",
    srcs = ["static_router.cc"],
    hdrs = ["public/pw_router/static_router.h"],
    includes = ["public"],
    deps = [
        ":egress",
        ":packet_parser",
        "//pw_log",
        "//pw_metric:metric",
    ],
)

pw_cc_library(
    name = "egress",
    hdrs = ["public/pw_router/egress.h"],
    deps = [
        ":packet_parser",
        "//pw_bytes",
    ],
)

pw_cc_library(
    name = "packet_parser",
    hdrs = ["public/pw_router/packet_parser.h"],
    includes = ["public"],
    deps = ["//pw_bytes"],
)

pw_cc_library(
    name = "egress_function",
    hdrs = ["public/pw_router/egress_function.h"],
    deps = [
        ":egress",
        "//pw_function",
    ],
)

pw_cc_test(
    name = "static_router_test",
    srcs = ["static_router_test.cc"],
    deps = [
        ":egress_function",
        ":static_router",
    ],
)
