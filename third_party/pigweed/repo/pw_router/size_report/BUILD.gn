import("//build_overrides/pigweed.gni")

import("$dir_pw_build/target_types.gni")

_common_deps = [
  "$dir_pw_bloat:bloat_this_binary",
  dir_pw_assert,
  dir_pw_log,
  dir_pw_sys_io,
]

pw_executable("base") {
  sources = [ "base.cc" ]
  deps = _common_deps
}

pw_executable("static_router_with_one_route") {
  sources = [ "static_router_with_one_route.cc" ]
  deps = _common_deps + [
           "..:egress_function",
           "..:static_router",
         ]
}
