load(
    "//pw_build:pigweed.bzl",
    "pw_cc_binary",
)

package(default_visibility = ["//visibility:public"])

licenses(["notice"])

pw_cc_binary(
    name = "base",
    srcs = ["base.cc"],
    deps = [
        "//pw_assert",
        "//pw_bloat:bloat_this_binary",
        "//pw_log",
        "//pw_rpc",
        "//pw_sys_io",
    ],
)

pw_cc_binary(
    name = "server_only",
    srcs = ["server_only.cc"],
    deps = [
        "//pw_assert",
        "//pw_bloat:bloat_this_binary",
        "//pw_log",
        "//pw_rpc",
        "//pw_sys_io",
    ],
)

# TODO(frolv): Figure out how to add third-party nanopb to Bazel.
filegroup(
    name = "nanopb_reports",
    srcs = [
        "base_with_nanopb.cc",
        "server_with_echo_service.cc",
    ],
)
