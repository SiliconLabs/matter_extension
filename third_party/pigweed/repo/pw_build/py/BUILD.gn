    "setup.cfg",
    "setup.py",
  ]
  sources = [
    "pw_build/__init__.py",
    "pw_build/collect_wheels.py",
    "pw_build/copy_from_cipd.py",
    "pw_build/create_gn_venv.py",
    "pw_build/create_python_tree.py",
