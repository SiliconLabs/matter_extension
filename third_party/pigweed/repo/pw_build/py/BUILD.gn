    "create_python_tree_test.py",
    "file_prefix_map_test.py",
    "generate_cc_blob_library_test.py",
    "python_runner_test.py",
    "zip_test.py",
  ]
  python_deps = [
    "$dir_pw_cli/py",
    "$dir_pw_env_setup/py",
    "$dir_pw_presubmit/py",
  ]
  pylintrc = "$dir_pigweed/.pylintrc"
