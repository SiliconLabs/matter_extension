load("@rules_python//python:defs.bzl", "py_library", "py_test")

package(default_visibility = ["//visibility:public"])

licenses(["notice"])

py_library(
    name = "pw_hdlc",
    srcs = [
        "pw_hdlc/__init__.py",
        "pw_hdlc/decode.py",
        "pw_hdlc/encode.py",
        "pw_hdlc/protocol.py",
        "pw_hdlc/rpc.py",
    ],
    imports = ["."],
    deps = [
        "//pw_protobuf_compiler/py:pw_protobuf_compiler",
        "//pw_rpc/py:pw_rpc",
        "//pw_status/py:pw_status",
    ],
)

py_test(
    name = "encode_test",
    size = "small",
    srcs = [
        "encode_test.py",
    ],
    deps = [
        ":pw_hdlc",
    ],
)

py_test(
    name = "decode_test",
    size = "small",
    srcs = [
        "decode_test.py",
    ],
    deps = [
        ":pw_hdlc",
        "//pw_build/py:pw_build",
    ],
)
