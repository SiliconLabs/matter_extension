import("//build_overrides/pigweed.gni")

import("$dir_pw_build/python.gni")

pw_python_package("py") {
  setup = [
    "pyproject.toml",
    "setup.cfg",
    "setup.py",
  ]
  sources = [
    "pw_hdlc/__init__.py",
    "pw_hdlc/decode.py",
    "pw_hdlc/encode.py",
    "pw_hdlc/protocol.py",
    "pw_hdlc/rpc.py",
    "pw_hdlc/rpc_console.py",
  ]
  tests = [
    "decode_test.py",
    "encode_test.py",
  ]
  python_deps = [
    "$dir_pw_protobuf_compiler/py",
    "$dir_pw_rpc/py",
  ]
  python_test_deps = [
    "$dir_pw_build/py",
    "$dir_pw_log:protos.python",
    "$dir_pw_tokenizer/py:test_proto.python",
  ]
  pylintrc = "$dir_pigweed/.pylintrc"
  mypy_ini = "$dir_pigweed/.mypy.ini"
}
