load(
    "//pw_build:pigweed.bzl",
    "pw_cc_library",
    "pw_cc_test",
)

package(default_visibility = ["//visibility:public"])

licenses(["notice"])

pw_cc_library(
    name = "pw_bytes",
    srcs = [
        "byte_builder.cc",
    ],
    hdrs = [
        "public/pw_bytes/array.h",
        "public/pw_bytes/byte_builder.h",
        "public/pw_bytes/endian.h",
        "public/pw_bytes/span.h",
        "public/pw_bytes/units.h",
    ],
    includes = ["public"],
    deps = [
        ":bit",
        "//pw_containers:iterator",
        "//pw_polyfill",
        "//pw_preprocessor",
        "//pw_span",
        "//pw_status",
    ],
)

pw_cc_library(
    name = "bit",
    hdrs = ["public/pw_bytes/bit.h"],
    includes = ["public"],
)

pw_cc_test(
    name = "array_test",
    srcs = ["array_test.cc"],
    deps = [
        ":pw_bytes",
        "//pw_unit_test",
    ],
)

pw_cc_test(
    name = "bit_test",
    srcs = ["bit_test.cc"],
    deps = [
        ":bit",
        "//pw_unit_test",
    ],
)

pw_cc_test(
    name = "byte_builder_test",
    srcs = ["byte_builder_test.cc"],
    deps = [
        ":pw_bytes",
        "//pw_unit_test",
    ],
)

pw_cc_test(
    name = "endian_test",
    srcs = ["endian_test.cc"],
    deps = [
        ":pw_bytes",
        "//pw_unit_test",
    ],
)

pw_cc_test(
    name = "units_test",
    srcs = ["units_test.cc"],
    deps = [
        ":pw_bytes",
    ],
)
