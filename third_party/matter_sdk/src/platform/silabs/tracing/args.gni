declare_args() {
  # When enabled, this sets:
  #  - configGENERATE_RUN_TIME_STATS in FreeRTOS
  #  - configUSE_STATS_FORMATTING_FUNCTIONS in FreeRTOS
  #  - Runtime statistics timer configuration
  #  - Task switching hooks for statistics collection
  silabs_tracing_runtime_stats = false

  # This shows a simple output about energy states and their statistics. Use "tracing energy" in matterCli.
  silabs_tracing_energy_stats = false

  # Debug output of each energy state transition, external analysis required. Can be enabled independently from tracing.
  silabs_tracing_energy_traces = false

  # Time to wait before outputting the results
  silabs_tracing_energy_traces_seconds = 600

  # Maximum number of energy traces to store
  silabs_tracing_energy_traces_max = 3000
}
