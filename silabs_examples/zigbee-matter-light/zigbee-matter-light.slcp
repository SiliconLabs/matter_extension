toolchain_settings:
  - option: cxx_standard
    value: gnu++17

tag:
- prebuilt_demo
- hardware:device:flash:1536
- hardware:device:ram:192 

configuration:
- name: SL_BOARD_ENABLE_VCOM
  value: 1
- condition: [iostream_eusart]
  name: SL_IOSTREAM_EUSART_VCOM_FLOW_CONTROL_TYPE
  value: eusartHwFlowControlCtsAndRts
- name: SL_CLI_MAX_INPUT_ARGUMENTS
  value: 16
- name: SLI_ZIGBEE_PRIMARY_NETWORK_DEVICE_TYPE
  value: SLI_ZIGBEE_NETWORK_DEVICE_TYPE_COORDINATOR_OR_ROUTER
- name: SLI_ZIGBEE_PRIMARY_NETWORK_SECURITY_TYPE
  value: SLI_ZIGBEE_NETWORK_SECURITY_TYPE_3_0
- condition: [iostream_usart]
  name: SL_IOSTREAM_USART_VCOM_RESTRICT_ENERGY_MODE_TO_ALLOW_RECEPTION
  value: '1'
- condition: [iostream_eusart]
  name: SL_IOSTREAM_EUSART_VCOM_RESTRICT_ENERGY_MODE_TO_ALLOW_RECEPTION
  value: '1'
- name: SL_CLI_PROMPT_STRING
  value: '"TriProtocol>"'
- name: SL_BT_CONFIG_USER_ADVERTISERS
  value: 3
- name: SL_BT_CONFIG_MAX_CONNECTIONS
  value: 4
- name: LIB_MEM_CFG_HEAP_SIZE
  value: 0
- name: SL_CLI_HELP_DESCRIPTION_ENABLED
  value: 0
- condition: [device_series_2]
  name: NVM3_DEFAULT_NVM_SIZE
  value: '32768'
- name: SL_PSA_ITS_SUPPORT_V1_DRIVER
  value: 0
- name: SL_PSA_ITS_SUPPORT_V2_DRIVER
  value: 0
- name: SL_PSA_ITS_SUPPORT_V3_DRIVER
  value: 1
- name: configTIMER_TASK_PRIORITY
  value: 53
- name: SL_IOSTREAM_EUSART_VCOM_RX_BUFFER_SIZE
  value: 128 # Increase from default for open thread
  condition:
    - iostream_eusart
- name: SL_HEAP_SIZE
  value: 40960 # Standard Matter HEAP size
  condition: [freertos]
- name: SL_STACK_SIZE
  value: 5120
  condition:
    - freertos
# Timer RTOS task priority needs to be one more than SL_BT_RTOS_LINK_LAYER_TASK_PRIORITY
# BT uses event flags that require the timer task to be higher priority than all other RTOS tasks
- name: configTIMER_TASK_PRIORITY
  value: 53
- name: LIB_MEM_CFG_HEAP_SIZE
  value: 0
- name: SL_IOSTREAM_EUSART_VCOM_RESTRICT_ENERGY_MODE_TO_ALLOW_RECEPTION
  value: 1
  condition:
    - iostream_eusart
- name: SL_OPENTHREAD_RTOS_TASK_PRIORITY
  value: 49 #Same as Zigbee
- name: SL_CLI_HELP_DESCRIPTION_ENABLED
  value: 0 # Code space savings
- name: configMAX_TASK_NAME_LEN
  value: 30
- name: SL_CLI_EOL_STRING
  value: '"\r\n"'
# TODO FixMe @Madhu
- name: SL_LEGACY_HAL_DISABLE_WATCHDOG
  value: 1
- name: CIRCULAR_QUEUE_LEN_MAX
  value: 16

define:
- name: OS_CFG_COMPAT_INIT
- name: SL_OPENTHREAD_RADIO_RX_BUFFER_COUNT
  value: 1
- name: CHIP_CRYPTO_PLATFORM
  value: 1
- name: _WANT_REENT_SMALL
  value: 1
- name: IS_DEMO_LIGHT
  value: 1
- name: NVM3_DEFAULT_NVM_SIZE
  value: 40960
- name: NVM3_DEFAULT_MAX_OBJECT_SIZE
  value: 4092
# Ouput logs to uart
- name: SILABS_LOG_OUT_UART
  value: "1"
- name: SL_CLI_TICK_ENABLE
  value: 0

config_file:
- path: config/sl_cmp_config.h
- path: config/zcl/zcl_config.zap
  file_id: zap_configuration_file_id
  directory: zcl
- override:
    component: gatt_configuration
    file_id: gatt_configuration_file_id
  path: ../../examples/platform/silabs/gatt_configuration.btconf
  directory: btconf

source:
  - path: ../../examples/platform/silabs/main.cpp
  - path: ./src/AppTask.cpp
  - path: ./src/MatterDMCallbacks.cpp
  - path: ./src/ZigbeeCallbacks.cpp
  - path: ./src/LightingManager.cpp

include:
  - path: ./include
    file_list:
      - path: AppConfig.h
      - path: AppEvent.h
      - path: AppTask.h
      - path: CHIPProjectConfig.h
      - path: LightingManager.h
      - path: ZigbeeCallbacks.h


readme:
  - path: ./README.md

sdk_extension:
  - {id: matter, version: 2.3.0}
